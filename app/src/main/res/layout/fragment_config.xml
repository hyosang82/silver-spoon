<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:id="@+id/more_root_main_layout"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application 버전 정보"
                android:textColor="@color/theme_color_blue_grey_main"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_color_blue_grey_main"></TextView>

            <RelativeLayout
                android:id="@+id/current_version_info_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawer_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:text="현재 버전" />

                <TextView
                    android:id="@+id/current_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:text="2.1.2" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="설정"
                android:layout_marginLeft="5dp"
                android:textColor="@color/theme_color_blue_grey_main"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_color_blue_grey_main"></TextView>

            <RelativeLayout
                android:id="@+id/contact_theme_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawer_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:text="테마 변경"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/current_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textColor="#FFFFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="BLUE_GREY"
                    android:textSize="15sp"
                    android:background="#FF000000"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|center_horizontal" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정보"
                android:layout_marginLeft="5dp"
                android:textColor="@color/theme_color_blue_grey_main"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_color_blue_grey_main"></TextView>

            <RelativeLayout
                android:id="@+id/contact_email_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawer_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:text="MIDAS Challenge 모바일 8조"
                    android:textSize="15sp" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/theme_color_blue_grey_main"></TextView>

            <RelativeLayout
                android:id="@+id/contact_opensource_license"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawer_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:text="Open Source License"
                    android:textSize="15sp" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>